<div class="main_index">
  <h2>フィードバック一覧</h2>

  <div class="row">
    <% unless @feed_backs.blank? %>
      <% @feed_backs.each do |feed_back|%>
        <div class="col-sm-12 col-lg-6 col-xl-4">
          <div class="image-box">
          <%= link_to (image_tag feed_back.task.image.url(:medium), class: "image-size"), team_feed_back_path(team_id: feed_back.team_id, 
                                                                                                              task_id: feed_back.task_id,
                                                                                                              id: feed_back.task_id) %>
          <div class="card-body">
            <div class="row parts">
              <%= link_to "詳細", team_feed_back_path(team_id: feed_back.team_id, 
                                                     task_id: feed_back.task_id,
                                                     id: feed_back.task_id), 
                                                     class: "btn btn-outline-info team_info" %>
                                                      
            </div>
            <div>
              <span><strong><%= feed_back.task.title %></strong></span>
              <%= link_to time_ago_in_words(feed_back.updated_at).upcase + "前", team_feed_back_path(team_id: feed_back.team_id, 
                                                                                                    task_id: feed_back.task_id,
                                                                                                    id: feed_back.task_id), 
                                                                                                    class: "team-time no-text-decoration" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
        <div class="col-sm-12 col-lg-6 col-xl-4">
          <h4>現在フィードバックはありません。</h4>
        </div>
    <% end %>
  </div>
</div>