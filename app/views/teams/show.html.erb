<div class="main">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= image_tag team_icon_url(@team), class: "round-img" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="row col-12">
          <h1><%= @team.name %></h1>
        </div>
        
        <% if @team.user_id == current_user.id %>
          <%= link_to "チーム情報編集", edit_team_path(@team), class: "btn btn-outline-success  profile-btn" %>
          <%= link_to "チーム削除", team_path(@team), class: "btn btn-outline-danger  profile-btn", method: :delete, 
                                                                                               data: { confirm: "チームを削除してもよろしいですか？"} %>
        <% elsif @assign.nil? %>
          <%= link_to "このチームに参加する！", team_assigns_path(@team), method: :post, 
                                                                      class: "btn btn-outline-primary profile-btn" %>
        <% else %>
          <%= link_to "退会する", team_assign_path(team_id: @team.id,
                                                  id: current_user.id), 
                                                  method: :delete, 
                                                  data: {confirm: "本当に退会してもよろしいですか？"},
                                                  class: "btn btn-outline-danger profile-btn" %>
        <% end %>
      </div>
      <div class="row">
        <%= @team.remarks %>
      </div>
    </div>
  </div>
</div>

<% unless @assigns.nil? %>
<div class="main_index">
  <div class="row">
    <div class="col-sm-6 col-md-12">
      <h2>メンバー</h2>
      <div class="row">
        <% @assigns.each do |assign|%>
          <div class="col-sm-12 col-lg-6 col-xl-4">
            <div class="image-box">
              <%= image_tag avatar_url(assign.user), class: "round-img" %>
            <div class="card-body">
              <div class="row parts">
                <%= link_to "詳細", team_assign_belong_team_user_path(team_id: assign.team.id, 
                                                                      assign_id: assign.id, 
                                                                      id: assign.user_id) %>
              </div>
              <div>
                <span><strong><%= assign.user.name %></strong></span>
                <%= link_to time_ago_in_words(assign.updated_at).upcase + "前", team_assign_belong_team_user_path(team_id: assign.team.id, 
                                                                                                                          assign_id: assign.id, 
                                                                                                                          id: assign.user_id), 
                                                                                                                          class: "team-time no-text-decoration" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>