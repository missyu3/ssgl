<% @teams.each do |team|%>
  <div class="d-flex flex-row  col-md-3 col-md-1 mx-auto">
    <div class="card-wrap">
      <div class="card">
        <%= team.assigns.each do |assign|%>
          <%= link_to (image_tag team.image.url(:medium)), team_assign_tasks_path(assign_id: assign.id, team_id: assign.team_id), class: "card-img-top image-size" %>
          <div class="card-body">
            <div class="row parts">
              <%= link_to "詳細", team_assign_tasks_path(assign_id: assign.id, team_id: assign.team_id) %>
            </div>
            <div>
              <span><strong><%= team.user.name %></strong></span>
              <%= link_to time_ago_in_words(assign.team.updated_at).upcase + "前", team_assign_tasks_path(assign_id: assign.id, team_id: assign.team_id), class: "team-time no-text-decoration" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>