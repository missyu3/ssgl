<div class="main_index">
  <h2>チーム一覧</h2>
  <div class="row">
    <%= form_with(url: teams_search_path, local: true, method: :get, class: "form-inline") do |f| %>
      <%= f.text_field :search_name, class: "form-control mr-sm-2", placeholder: "チーム名" %>
      <%= f.submit '検索', class: "btn btn-outline-success form-control" %>
      <%= link_to "チーム作成", new_team_path, class: "btn btn-outline-primary form-control"%>
    <% end %>
  </div>
  <div class="mb-3">
    <%= paginate @teams %>
    <%= page_entries_info @teams%>
  </div>
  <div class="row">
    <% @teams.each do |team|%>
      <div class="col-md-4">
        <div class="image-box">
          <%= link_to  team_path(team)  do %>
            <%= image_tag team_icon_url(team),class: "image-size" %>
            <div class="card-body">
              <span><strong><%= team.name %></strong></span>
              <%= link_to time_ago_in_words(team.created_at).upcase + "前", team_path(team), class: "team-time no-text-decoration" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>