<%= form_with(model: comment, url: team_assign_task_challenge_start_answer_comments_path(team_id: @comment.team_id, 
                                                                                         assign_id: @comment.assign_id, 
                                                                                         task_id: @comment.task_id, 
                                                                                         challenge_starts: @comment.challenge_start_id, 
                                                                                         answer_id: @comment.answer_id), 
                                                                                         method: :post) do |f| %>
<div class="field">
  <%= f.label :content %>
  <%= f.text_area :content %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>